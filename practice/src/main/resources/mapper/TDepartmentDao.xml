<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hodo.practice.dao.TDepartmentDao">

    <resultMap type="com.hodo.practice.entity.TDepartment" id="TDepartmentMap">
        <result property="departmentid" column="departmentId" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TDepartmentMap">
        select departmentId,
               name
        from practice2.t_department
        where departmentId = #{departmentid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TDepartmentMap">
        select departmentId,
               name
        from practice2.t_department limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TDepartmentMap">
        select
        departmentId, name
        from practice2.t_department
        <where>
            <if test="departmentid != null">
                and departmentId = #{departmentid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="departmentid" useGeneratedKeys="true">
        insert into practice2.t_department(name)
        values (#{name})
    </insert>

    <insert id="insertBatch" keyProperty="departmentid" useGeneratedKeys="true">
        insert into practice2.t_department(name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="departmentid" useGeneratedKeys="true">
        insert into practice2.t_department(name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name})
        </foreach>
        on duplicate key update
        name = values(name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update practice2.t_department
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where departmentId = #{departmentid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from practice2.t_department
        where departmentId = #{departmentid}
    </delete>

</mapper>

